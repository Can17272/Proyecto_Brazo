#: import imgs styles.collection

<Header>:
    orientation: "vertical"
    canvas:
        Color:
            rgb: 1, 0.6, 0
        Rectangle:
            size: self.size
            pos: self.pos
    padding: 5,5,5,5

<Body>:
    orientation: "vertical"
    padding: 10
    canvas:
        Color:
            rgb: 0.9, 0.9, 0.9
        Rectangle:
            size: self.size
            pos: self.pos
    
<Footer>:
    orientation: "vertical"
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    padding: 5,5,5,1
    
#: import imgs styles.collection

<Container>:
    orientation: "vertical"
    canvas:
        Color:
            rgb: 1, 1, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            
    
<Btn1>:
    border: 0,0,0,0
    background_normal: imgs.transparency
    background_down: imgs.shadow40
    bold: True
