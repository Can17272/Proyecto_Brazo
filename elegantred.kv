#: import imgs styles.collection

<Header>:
    orientation: "vertical"
    canvas:
        Color:
            rgb: 1,0, 0
        Rectangle:
            size: self.size
            pos: self.pos
    padding: 5,5,5,5

<Body>:
    orientation: "vertical"
    padding: 10
    canvas:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            size: self.size
            pos: self.pos
<Text_Input>:
    orientation: "vertical"
    padding: 10
    canvas:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            size: self.size
            pos: self.pos
<Footer>:
    orientation: "vertical"
    canvas:
        Color:
            rgb: 0.1, 0.1, 0.1
        Rectangle:
            size: self.size
            pos: self.pos
    padding: 5,5,5,5
    
#: import imgs styles.collection

<Container>:
    orientation: "vertical"
    canvas:
        Color:
            rgb: 0.15, 0.15, 0.15
        RoundedRectangle:
            size: self.size
            pos: self.pos
            
    
<Btn1>:
    border: 0,0,0,0
    background_normal: imgs.transparency
    background_down: imgs.shadow40
    bold: True
    canvas.before:
        Color:
            rgb: 1, 0.8, 0.2
        Rectangle:
            pos: self.pos
            size: self.size
            
    
<Btn2>:
