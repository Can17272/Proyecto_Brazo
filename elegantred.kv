<Separator>:
    size_hint_y: 0.001
    canvas:
        Color:
            rgb: 1, .8, 0
        Rectangle:
            size: self.size
            pos: self.pos

<Paragraph>:
    padding: 10
    text: ""
    Label:
        text: root.text
        text_size: self.size
        halign: "left"
        valign: "top"
    
<Title1>:
    halign: "center"
    valign: "middle"
    bold: True
    font_size: self.height*0.5
    
<Title2>:
    halign: "center"
    valign: "middle"
    bold: True
